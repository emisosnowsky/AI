<!DOCTYPE html>
<html>
  <head>
    <title>MojSklep</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  </head>

  <body>
    <header class="navbar navbar-inverse">
    <div class="container">
      <%= link_to "MojSklep", home_path, class:"btn btn-default btn-lg", id:"logo" %>
    <div class="nav_item">
      <%= link_to "Wszystkie produkty", products_path, class:"btn btn-default", id:"products" %>
    </div>
    <% if logged_in? %>
          <li><%= link_to "Customers", '#' %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_customer %></li>
              <li><%= link_to "Settings", '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
     <% else %>
     <%= link_to "Zaloguj siÄ™", login_path, class:"btn btn-default", id:"products2" %> 
    <% end %>   
   </div>
   </header>
       <div class="container">
            <%= image_tag("img5.jpg", :size => "1138x373") %>  
          <hr/>
      </div>


   <div class="container">
      <%= render 'layouts/messages' %>

        <%= yield %>
        <div class="footer">
        <p>&copy; MojSklep 2017</p>
        </div>
    </div>


  </body>
</html>