<%= render 'shared/page_title', title: "Zaloguj się" %>

<div class="row">
	<div class="col-md-6-centre col md-offset-3">
		<%= form_for(:session, url: login_path) do |f| %>

		<%= f.label :email %>
		<%= f.email_field :email, class: 'form-control' %>

		<%= f.label :password %>
		<%= f.password_field :password, class: 'form-control' %>

		<%= f.submit "Zaloguj się", class: "btn btn-primary" %>

		<% end %>

		<p>Nie masz konta? <%= link_to "Zarejestruj się!", new_customer_path %></p>

	</div>
</div>
