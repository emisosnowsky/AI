<h1><strong>Zarejestruj się w sklepie</strong></h1>

<hr/>
	<h2><strong>Aby utworzyć konto, podaj swój login, imię, nazwisko adres i telefon poniżej!</strong></h2>

<div class="row">
	<div class="well col-md8 col md-offset-2">
		<%= form_for @customer do |f| %>
			<%= f.label :login %>
			<%= f.text_field :login %>

			<%= f.label :password %>
			<%= f.text_field :password %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :lastname %>
			<%= f.text_field :lastname %>

			<%= f.label :address %>
			<%= f.text_field :address %>

			<%= f.label :phone %>
			<%= f.text_field :phone %>

			<%= f.submit 'Stwórz konto', class: "btn btn-success" %>

			<% end %>
	</div>
</div>
